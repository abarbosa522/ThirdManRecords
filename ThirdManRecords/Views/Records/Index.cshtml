
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<div id="recordsNavBar" class="navbar navbar-inverse">
    <div class="container">
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Blue Series", "BlueSeries", "Records")</li>
                <li>@Html.ActionLink("Green Series", "GreenSeries", "Records")</li>
                <li>@Html.ActionLink("Vault Packages", "VaultPackages", "Records")</li>
            </ul>
        </div>
    </div>
</div>

<h2>Records</h2>

<div class="row">

@for (var i = 0; i < Model.Count; i = i + 3)
{
    <div class="row">

        <div class="col-sm-4">
            <a href="../records/details?code=@Model[i].code">
                <img class="img-responsive" src="@Model[i].cover">
            </a>
            <text>@Model[i].title (@Model[i].code)</text>
        </div>

        @if (Model.Count > i + 1)
        {
            <div class="col-sm-4">
                <a href="../records/details?code=@Model[i + 1].code">
                    <img class="img-responsive" src="@Model[i + 1].cover">
                </a>
                <text>@Model[i + 1].title (@Model[i + 1].code)</text>
            </div>
        }

        @if (Model.Count > i + 2)
        {
            <div class="col-sm-4">
                <a href="../records/details?code=@Model[i + 2].code">
                    <img class="img-responsive" src="@Model[i + 2].cover">
                </a>
                <text>@Model[i + 2].title (@Model[i + 2].code)</text>
            </div>
        }

    </div>

    <br />
}

</div>
