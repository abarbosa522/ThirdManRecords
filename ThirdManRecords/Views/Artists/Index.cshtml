
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel='stylesheet' type='text/css' href='../Content/artists.css' />
</head>

<h2>Artists</h2>

@for (var i = 0; i < Model.Count; i = i + 3)
{
    <div class="row">
        <div class="col-sm-4">
            <a href="../artists/details?name=@Model[i].name">
                <img class="img-responsive" src="@Model[i].picture">
            </a>
            <text>@Model[i].name</text>
        </div>
        
        
        @if (Model.Count > i + 1)
        {
            <div class="col-sm-4">
                <a href="../artists/details?name=@Model[i + 1].name">
                    <img class="img-responsive" src="@Model[i + 1].picture">
                </a>
                <text>@Model[i + 1].name</text>
            </div>
        }
        
        @if (Model.Count > i + 2)
        {
            <div class="col-sm-4">
                <a href="../artists/details?name=@Model[i + 2].name">
                    <img class="img-responsive" src="@Model[i + 2].picture">
                </a>
                <text>@Model[i + 2].name</text>
            </div>
        }
    </div>

    <br />
}